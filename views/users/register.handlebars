<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/notepad.svg">
      <h3 class="text-center">Account Register</h3>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input name="name" value="{{name}}" type="text" id="username" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input value="{{email}}" name="email" type="email" id="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="pw">Password</label>
          <input value="{{password}}" name="password" type="password" id="pw" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="pw_confirm">Confirm Password</label>
          <input value="{{password_confirm}}" name="password_confirm" type="password" id="pw_confirm" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>